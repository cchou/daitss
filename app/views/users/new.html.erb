<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@user) do |f| %>
    <%#= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :id, :class=>"col-md-2 col-md-offset-3 control-label" %>
      <div class="col-md-3 ">    
        <%= f.text_field :id,  :class=>"form-control" %>
      </div>
    </div>

    <div class="form-group">    
      <%= f.label :description, :class=>"col-md-2 col-md-offset-3 control-label"  %>
      <div class="col-md-3 ">    
        <%= f.text_field :description,  :class=>"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :type, :class=>"col-md-2 col-md-offset-3 control-label" %>
      <div class="col-md-3 ">    
        <%= select_tag(:type, options_for_select([['operator', 'operator'], ['affiliates', 'affiliates']]) )%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :account_id, :class=>"col-md-2 col-md-offset-3 control-label" %>
      <div class="col-md-3 ">    
        <%= f.select(:account_id, Account.all.collect {|a| a.id}) %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :first_name, :class=>"col-md-2 col-md-offset-3 control-label" %>
      <div class="col-md-3 ">    
        <%= f.text_field :first_name,  :class=>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :last_name, :class=>"col-md-2 col-md-offset-3 control-label" %>
      <div class="col-md-3 ">    
        <%= f.text_field :last_name,  :class=>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, :class=>"col-md-2 col-md-offset-3 control-label" %>
      <div class="col-md-3 ">    
        <%= f.text_field :email,  :class=>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, :class=>"col-md-2 col-md-offset-3 control-label" %>
      <div class="col-md-3 ">    
        <%= f.password_field :auth_key,  :class=>"form-control", :placeholder => "Password" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone, :class=>"col-md-2 col-md-offset-3 control-label" %>
      <div class="col-md-3 ">    
        <%= f.text_field :phone,  :class=>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :address, :class=>"col-md-2 col-md-offset-3 control-label" %>
      <div class="col-md-3 ">    
        <%= f.text_field :address,  :class=>"form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-3 col-md-offset-5">
        <%= f.submit "Create my account", class: "btn btn-large btn-primary " %>
      </div>
    </div>
    <% end %>
  </div>
</div>