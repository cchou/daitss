<% provide(:title, 'Edit User') %>
<h1>Update your profile</h1>

  <%= form_for(@user, :as => :user, :html => {:class => "form-horizontal"}) do |f| %>
  <%#= render 'shared/error_messages' %>
  <div class="form-group">
    <%= f.label :id, :class=>"col-md-1 col-md-offset-4 control-label" %>
    <div class="col-md-3 ">
      <%= f.text_field :id,  :class=>"form-control", :readonly => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, :class=>"col-md-1 col-md-offset-4 control-label"  %>
    <div class=" col-md-3 ">
      <%= f.text_field :description, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :account_id, :class=>"col-md-1 col-md-offset-4 control-label"  %>
    <div class="col-md-3 ">
      <%= f.select(:account_id, Account.all.collect {|a| a.id}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, :class=>"col-md-1 col-md-offset-4 control-label"  %>
    <div class="col-md-3 ">
      <%= f.text_field :first_name, :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name,:class=>"col-md-1 col-md-offset-4 control-label"  %>
    <div class="col-md-3 ">
      <%= f.text_field :last_name, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, :class=>"col-md-1 col-md-offset-4 control-label"  %>
    <div class="col-md-3 ">
      <%= f.text_field :phone, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class=>"col-md-1 col-md-offset-4 control-label"  %>
    <div class="col-md-3 ">
      <%= f.text_field :email, :class=>"form-control", :type => "email" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address, :class=>"col-md-1 col-md-offset-4 control-label"  %>
    <div class="col-md-3 ">
      <%= f.text_area :address, :class=>"form-control", rows: "2" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-3 col-md-offset-5">
      <%= f.submit "Save Changes", class: "btn btn-lg btn-primary" %>
    </div>
  </div>
  <% end %>
