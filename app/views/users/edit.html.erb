<% provide(:title, 'Edit User') %>
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user, :as => :user, :html => {:class => "form-horizontal"}) do |f| %>
      <%#= render 'shared/error_messages' %>
      <div class="control-group">
        <%= f.label :id, class: "control-label" %>
        <div class="controls">
      	  <%= f.text_field :id, :readonly => true %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :description, class: "control-label" %>
        <div class="controls">
      	  <%= f.text_field :description %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :account_id, class: "control-label" %>
        <div class="controls">
          <%= f.select(:account_id, Account.all.collect {|a| a.id}) %>
        </div>
      </div>

     <div class="control-group">
      <%= f.label :first_name, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :first_name %>
       </div>
      </div>

     <div class="control-group">
      <%= f.label :last_name, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :last_name %>
       </div>
      </div>
 
     <div class="control-group">
      <%= f.label :email, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :email, :type => "email" %>
       </div>
      </div>

      <div class="control-group">
        <%= f.label :phone, class: "control-label" %>
        <div class="controls">
          <%= f.text_field :phone, :type=>'tel', :pattern=>'[\(]\d{3}[\)]\d{3}[\-]\d{4}', :title=>'Phone Number (Format: (999)999-9999)'%>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :address, class: "control-label" %>
        <div class="controls">
          <%= f.text_area :address, rows: "2" %>
        </div>
      </div>

      <div class="control-group">
	    <div class="controls">
          <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>