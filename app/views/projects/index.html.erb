<% provide(:title, 'All Projects') %>
<h6>Admin->Projects</h6>
<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to 'New Project', new_project_path %>
  </div>
</div>
<table class='table table-striped'>
  <tr>
    <th>Id</th>
    <th>Description</th>
    <th>Account</th>
    <th></th>
    <th></th>
  </tr>

  <% @projects.each do |project| %>
  <tr>
    <td><%= project.id %></td>
    <td><%= project.description %></td>
    <td><%= project.account_id%></td>
    <td><%= link_to 'Edit', edit_project_path(:id => project.id, :account_id => project.account_id) %></td>
    <td><%= link_to 'Delete', project_path(project, :account_id => project.account_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>

